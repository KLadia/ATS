@model System.Data.DataTable;
@using System.Data;


@{
    ViewData["Title"] = "List of upcoming events";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            @foreach (DataColumn col in Model.Columns)
            {
                
                <th>@col.ColumnName</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                @foreach (DataColumn col in Model.Columns)
                {
                    <td>@row[col.ColumnName]</td>
                }
            </tr>
        }
    </tbody>
</table>

<h2><a asp-action="SignUp" asp-controller="Events">Sign Up</a></h2>

